  //- Accessible modal for screenshots. Keeps fallback links working when JS is disabled.
  #screenshot-modal(v-if="modalOpen" role="dialog" aria-modal="true" :aria-label="modalLabel" @click="closeModal")
    .modal-overlay
    .modal-content
      button.close-button(type="button" aria-label="Close screenshot" @click="closeModal") ×
      h2.sr-only Screenshot viewer
      img.modal-image(:src="currentSrc" :alt="currentAlt")

